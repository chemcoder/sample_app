<div class="center hero-unit">
	<h1>Welcome to sample app</h1>
	<h2>This is the home page for the <a href="http://auraaerosols.in">Aura Aerosols website</a> sample web application
	</h2>
	<%= link_to "Sign up now!", signup_path , class: "btn btn-large btn-primary" %>


</div>
<% if signed_in? %>
    <div class="row">
    
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
      <div class="span8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  .
  .
  .
<% end %>
